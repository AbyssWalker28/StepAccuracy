<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.unimib.stephaccuracy">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StephAccuracy">

        <activity
            android:name=".activity.allPedometer_activity"
            android:theme="@style/Theme.StephAccuracy.NoActionBar"
            android:label="allPedometer">
        </activity>

        <activity
            android:name=".activity.simplePedometer_1_activity"
            android:theme="@style/Theme.StephAccuracy.NoActionBar"
            android:label="simplePedometer">
        </activity>

        <activity
            android:name=".activity.gpsPedometer_2_activity"
            android:theme="@style/Theme.StephAccuracy.NoActionBar"
            android:label="gpsPedometer">
        </activity>

        <activity
            android:name=".activity.dirPedometer_3_activity"
            android:theme="@style/Theme.StephAccuracy.NoActionBar"
            android:label="dirPedometer">
        </activity>

        <service
            android:name=".sensor.SensorServiceAcc">
        </service>

        <service
            android:name=".sensor.SensorServiceGPS">
        </service>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.StephAccuracy.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>